import sys, getopt

def usage():
    print "Usage:"
    print "wlst.sh start.wlst [-u username] [-c credential] [-h host] [-o port] [-t nm type] [-n domain name] [-d domain path] [-m managed server name]"

#====== Main program ===============================
try:
    opts, args = getopt.getopt( sys.argv[1:], "u:c:h:o:n:d:t:m:", ["username","password","nm_host","nm_port","domain_name","domain_path","nm_type", "ms_name"] )
except getopt.GetoptError, err:
    print str(err)
    usage()
    sys.exit(2)

#===== Handling get options  ===============
for opt, arg in opts:
    if opt == "-u":
        username = arg
    if opt == "-c":
        password = arg
    if opt == "-h":
        nm_host = arg
    if opt == "-o":
        nm_port = arg
    if opt == "-n":
        domain_name = arg
    if opt == "-d":
        domain_path = arg
    if opt == "-t":
        nm_type = arg
    if opt == "-m":
        ms_name = arg
try:
    nmConnect(username, password, nm_host, nm_port, domain_name, domain_path, nm_type)
    status=nmServerStatus(ms_name)
    if status == "RUNNING":
        print "%s already running" % ms_name

    else:
        print "Starting %s" % ms_name
        nmStart(ms_name)

except:
    print "ERROR STARTING %s.  " % ms_name
    sys.exit(1)

sys.exit(0)
